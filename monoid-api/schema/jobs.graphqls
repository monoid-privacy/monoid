scalar Time

enum JobStatus {
    QUEUED
    RUNNING
    COMPLETED
    PARTIAL_FAILED
    FAILED
}

type Job {
    id: ID!
    jobType: String!
    resourceId: ID!
    status: JobStatus!

    siloDefinition: SiloDefinition! @goField(forceResolver: true)
    logs: [String!]

    createdAt: Time!
    updatedAt: Time!
}

type JobsResult {
    jobs: [Job!]
    numJobs: Int!
}

extend type Workspace {
    jobs(
        jobType: String!,
        resourceId: ID,
        status: [JobStatus],
        query: String,
        limit: Int!,
        offset: Int!
    ): JobsResult!

    job(id: ID!): Job!
}

extend type Mutation {
    cancelJob(id: ID!): Job
}
